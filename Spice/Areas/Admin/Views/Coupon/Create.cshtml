@model Coupon
@{
    ViewData["Title"] = "Create Coupon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-dark">Create Coupon</h2>
<br />

<form method="post" asp-action="Create" asp-area="Admin" enctype="multipart/form-data">
    <div class="border bg-white p-5">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" asp-for="Picture" id="couponImage" multiple class="form-control" />
            </div>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select type="text" asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
            
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmout" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="MinimumAmout" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="MinimumAmout"></span>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
               <partial name="_CreateBackToListButtons" />
            </div>
        </div>
    </div>
</form>