@model SubCategory
@{ 
    ViewData["Title"] = "Delete Sub Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <br />
    <h2 class="text-dark">Delete Sub Category</h2>
    <br />


    <div class="border bg-white p-5 row">
        <div class="col-12">
            <form method="post" asp-action="Delete" asp-controller="SubCategory" asp-area="Admin">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Category.Name" class="form-control" readonly />
                    </div>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" asp-for="Name" readonly class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_SubCategoryDeleteAndBackButtons" model="@Model.Id"/>
                    </div>
                </div>
            </form>
        </div>

    </div>