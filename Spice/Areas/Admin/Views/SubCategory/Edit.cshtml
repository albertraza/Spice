@model Spice.Models.ViewModels.CategoryAndSubCategoryViewModel
@{
    ViewData["Title"] = "Edit Sub Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-dark">Edit Sub Category</h2>
<br />
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<div class="border bg-white p-5 row">
    <div class="col-8 border-right">
        <form method="post" asp-action="Edit" asp-controller="SubCategory" asp-area="Admin">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="SubCategory.Id" />
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select id="ddlCategoryList" disabled asp-for="SubCategory.CategoryId" asp-items="@Model.Categories.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>
                </div>
                <span class="text-danger" asp-validation-for="SubCategory.CategoryId"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="SubCategory.Name" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="SubCategory.Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_CreateSCButtonAndBackToList" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        @if (Model.SubCategories.Count() > 0)
        {
            <p>Existing Subcategories: </p>

            <div id="SubCategoryList">

            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

    function updateSubCategoryList() {
        var categorySelected = document.getElementById("ddlCategoryList").value;
        $list = $('#SubCategoryList');

        $.ajax({
            url: '/Admin/SubCategory/GetSubCategories?id=' + categorySelected,
            type: 'GET',
            dataType: 'text',
            success: function (data) {
                var results = JSON.parse(data);
                $list.html('');
                $list.append('<ul class="list-group">');
                for (i in results) {
                    $list.append('<li class="list-group-item">' + results[i].text + '</li>');
                }
                $list.append('</ul>');
            }
        });
    }

    $(document).ready(function () {
        updateSubCategoryList();
    });

    </script>
}