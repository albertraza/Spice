@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <br />
    <h2 class="text-dark">Delete Category</h2>
    <br />

    <form method="post" asp-action="Delete" asp-controller="Category" asp-area="Admin">
        <div class="border bg-white p-5">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="Name" readonly class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_DeleteAndBackButtons" model="@Model.Id" />
                </div>
            </div>
        </div>
    </form>